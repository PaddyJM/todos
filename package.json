{
  "name": "todo-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@auth0/auth0-react": "^2.2.4",
    "@fontsource/poppins": "^4.5.0",
    "axios": "^1.6.8",
    "date-fns": "^2.28.0",
    "framer-motion": "^6.0.0",
    "jose": "^5.3.0",
    "js-cookie": "^3.0.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hot-toast": "^2.2.0",
    "react-icons": "^4.3.1",
    "react-scripts": "5.0.0",
    "sass": "^1.93.2",
    "use-debounce": "^10.0.0",
    "uuid": "^8.3.2",
    "zukeeper": "^1.0.2",
    "zustand": "^4.5.2"
  },
  "scripts": {
    "postinstall": "cd ./infrastructure && npm install",
    "dev": "env-cmd -f .env.dev react-scripts start",
    "dev:db": "cd infrastructure/ && docker compose up -d && scripts/create-table.sh",
    "dev:api": "npm run dev:db && cd infrastructure/ && env-cmd -f ../.env.dev bash -c 'ENV=dev npx cdk synth && sam local start-api -p $LOCAL_API_PORT -t ./cdk.out/TodosStack-dev.template.json --docker-network todos --warm-containers EAGER --skip-pull-image' && cd ../",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}'",
    "deploy:prod": "env-cmd -f .env.prod npm run build && cd ./infrastructure && env-cmd -f ../.env.prod bash -c 'ENV=prod npx cdk deploy && cd .. && aws cloudfront create-invalidation --distribution-id $CLOUDFRONT_DISTRIBUTION_ID --paths \"/*\"'"
  },
  "eslintConfig": {
    "extends": [
      "wesbos"
    ],
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ],
      "react/prop-types": 0
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.24.3",
    "@babel/plugin-proposal-private-property-in-object": "^7.16.7",
    "@babel/preset-env": "^7.24.3",
    "@types/auth0-js": "^9.21.5",
    "@types/aws-lambda": "^8.10.136",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^20.11.25",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/uuid": "^9.0.8",
    "babel-jest": "^29.7.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.57.0",
    "jest": "^27.5.1",
    "prettier": "^3.2.5",
    "typescript": "4.9.5"
  }
}
